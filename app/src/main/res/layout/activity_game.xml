<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_above="@id/containers"
        android:layout_alignTop="@id/containers"
        android:id="@+id/parent">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:id="@+id/progress" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:baselineAligned="false"
        android:id="@+id/containers">
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginStart="@dimen/gamepad_padding_horizontal"
            android:layout_marginBottom="@dimen/gamepad_padding_vertical"
            android:id="@+id/left_container" />
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginEnd="@dimen/gamepad_padding_horizontal"
            android:layout_marginBottom="@dimen/gamepad_padding_vertical"
            android:id="@+id/right_container" />
    </LinearLayout>

</RelativeLayout>